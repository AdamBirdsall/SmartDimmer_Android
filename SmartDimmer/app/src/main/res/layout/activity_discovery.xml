<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adambirdsall.smartdimmer.DiscoveryActivity">

    <ListView
        android:id="@+id/mainList"
        android:layout_width="366dp"
        android:layout_height="249dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/connectedLabel"
        android:layout_width="172dp"
        android:layout_height="31dp"
        android:text="Not Connected"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="153dp"
        android:layout_height="26dp"
        android:text="0"
        android:gravity="center"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/connectedLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/mainSlider"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/brightnessLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/mainSlider"
        app:layout_constraintRight_toLeftOf="@+id/plusButton"
        android:layout_marginRight="33dp" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/mainSlider"
        android:layout_marginRight="84dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Switch
        android:id="@+id/onOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Off"
        android:textOn="On"
        android:layout_marginTop="74dp"
        app:layout_constraintTop_toBottomOf="@+id/mainSlider"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
